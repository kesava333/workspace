def scriptFile="scripts/resource.py"
pipeline {
    agent {
            kubernetes {
            yamlFile 'templates/pod.yaml'
            defaultContainer 'shell'
        }
    }

    stages {
        stage('SCM Pull') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[credentialsId: '', url: 'https://gitlab.clearpathrobotics.com/sweng-infra/aws-common-workflow.git']]])
            }
        }
        stage('Creating AWS Resources') {
            steps {
                script{
                    withCredentials([[
                                    $class: 'AmazonWebServicesCredentialsBinding',
                                    credentialsId: "LambdaExecution",
                                    accessKeyVariable: 'AWS_ACCESS_KEY_ID',
                                    secretKeyVariable: 'AWS_SECRET_ACCESS_KEY'
                                ]]) {
                                    sh("rm -rf /tmp/scripts && mkdir /tmp/scripts && cp '${scriptFile}' /tmp/scripts")
                                    sh("pip3 install boto3")
                                    sh("""python3 /tmp/'${scriptFile}' '${Project_Name}' '${Jira_Ticket_ID}'  '${Customer_IP}' '${RegionName}' """)
                                    
                                }
                            }
                        }
                    }
        stage('Removing the Pipeline Residues'){
            steps{
                script{
                    sh("rm -rf /tmp/scripts/*")

                }
            }
        }
    }
}

 


